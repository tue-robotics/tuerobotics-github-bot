{
  "name": "tuerobotics-github-bot",
  "version": "0.1.0",
  "private": true,
  "description": "A Probot app",
  "author": "Arpit Aggarwal <ar13pit@gmail.com>",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tue-robotics/tuerobotics-github-bot.git"
  },
  "homepage": "https://github.com/tue-robotics/tuerobotics-github-bot",
  "bugs": {
    "url": "https://github.com/tue-robotics/tuerobotics-github-bot/issues"
  },
  "keywords": [
    "probot",
    "github",
    "probot-app"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc && (tsc -w --preserveWatchOutput & nodemon)",
    "dev": "npm run build:watch",
    "start": "probot run ./lib/index.js",
    "lint": "standard **/*.ts --fix",
    "test": "jest && standard **/*.ts",
    "test:watch": "jest --watch --notify --notifyMode=change --coverage"
  },
  "dependencies": {
    "probot": "^9.5.3"
  },
  "devDependencies": {
    "@types/jest": "^25.1.0",
    "@types/nock": "^11.1.0",
    "@types/node": "^13.1.0",
    "@typescript-eslint/parser": "^2.4.0",
    "eslint-plugin-typescript": "^0.14.0",
    "jest": "^24.9.0",
    "nock": "^12.0.0",
    "nodemon": "^2.0.6",
    "smee-client": "^1.1.0",
    "standard": "^16.0.3",
    "ts-jest": "^25.1.0",
    "typescript": "^3.9.7"
  },
  "engines": {
    "node": ">= 8.3.0"
  },
  "standard": {
    "parser": "@typescript-eslint/parser",
    "env": [
      "jest"
    ],
    "plugins": [
      "typescript"
    ]
  },
  "jest": {
    "testEnvironment": "node"
  },
  "main": "jest.config.js",
  "directories": {
    "test": "test"
  }
}
